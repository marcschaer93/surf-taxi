{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "title": "Root Schema",
  "type": "object",
  "required": ["username", "password"],

  "properties": {
    "username": {
      "title": "The username Schema",
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "examples": ["marcschaer"]
    },
    "password": {
      "title": "The password Schema",
      "type": "string",
      "minLength": 5,
      "maxLength": 20,
      "examples": ["password1993"]
    }
  },
  "additionalProperties": false
}
